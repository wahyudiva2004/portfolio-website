{
    "version": 2,
    "builds": [
        { "src": "**/*", "use": "@vercel/static" },
        { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "/$1" }
    ],
    "env": {
        "HUGGING_FACE_API_KEY": "${HUGGING_FACE_API_KEY}"
    }
}
